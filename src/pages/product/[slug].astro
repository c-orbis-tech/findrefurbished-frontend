---
import Layout from '../../layouts/Layout.astro';

const { slug } = Astro.params;

const host = import.meta.env.PUBLIC_MEILI_HOST;
const key = import.meta.env.PUBLIC_MEILI_SEARCH_KEY;

let debugInfo = null;
let product = null;

try {
  const response = await fetch(`${host}/indexes/products/search`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'Authorization': `Bearer ${key}`
    },
    body: JSON.stringify({
      filter: `variant_slug = "${slug}"`,
      limit: 1
    })
  });

  debugInfo = await response.json();
  
  if (debugInfo.hits && debugInfo.hits.length > 0) {
    product = debugInfo.hits[0];
  }
} catch (e) {
  debugInfo = { error: e.message };
}

// TIJDELIJK: We schakelen de 404 redirect uit om te zien wat er gebeurt
// if (!product) { return Astro.redirect('/404'); }

const sortedOffers = product?.offers?.sort((a, b) => a.price - b.price) || [];
---

<Layout title="Debug Pagina">
  <main class="p-10">
    {!product ? (
      <div class="bg-red-50 p-8 border border-red-200 rounded-xl">
        <h1 class="text-red-600 font-bold text-2xl mb-4">Product niet gevonden!</h1>
        <p class="mb-4 text-gray-700">Astro zocht naar slug: <strong>{slug}</strong></p>
        
        <h2 class="font-bold mb-2">Rauwe data van Meilisearch:</h2>
        <pre class="bg-gray-900 text-green-400 p-4 rounded overflow-auto max-h-96 text-xs">
          {JSON.stringify(debugInfo, null, 2)}
        </pre>
      </div>
    ) : (
      <div>
        <h1 class="text-4xl font-black">{product.title_h1}</h1>
        <!-- Rest van je mooie product code hier... -->
      </div>
    )}
  </main>
</Layout>



<Layout title={`${product.title_h1} Vergelijken - Vind Refurbished`}>
  <main class="max-w-5xl mx-auto px-4 py-12">
    <!-- Product Sectie -->
    <div class="flex flex-col md:flex-row gap-12 mb-16">
      <div class="w-full md:w-1/2 flex justify-center bg-white p-8 rounded-3xl shadow-sm border border-gray-100">
        <img 
          src={`https://img.findrefurbished.com/${product.master_id}.png`} 
          alt={product.title_h1}
          class="max-h-[400px] w-auto object-contain"
          onerror="this.src='https://placehold.co/200x200?text=Geen+Foto'"
        />
      </div>
      
      <div class="w-full md:w-1/2">
        <nav class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-4">
          <a href="/" class="hover:text-blue-600">Home</a> / 
          <span class="text-gray-900">{product.brand}</span>
        </nav>
        <h1 class="text-4xl font-black text-gray-900 mb-4 leading-tight">{product.title_h1}</h1>
        <p class="text-gray-500 mb-8 leading-relaxed">
          Vergelijk prijzen voor de <strong>{product.title_h1}</strong> van verschillende aanbieders. 
          Vind de beste deal voor zowel nieuwe als refurbished toestellen.
        </p>

        <div class="inline-block bg-blue-600 text-white px-6 py-4 rounded-2xl shadow-lg shadow-blue-200">
          <span class="text-xs uppercase font-bold opacity-80 block mb-1 text-blue-100">Vanaf prijs</span>
          <span class="text-4xl font-black">€{Number(product.min_price).toFixed(2)}</span>
        </div>
      </div>
    </div>

    <!-- Deal Tabel -->
    <h2 class="text-2xl font-black text-gray-900 mb-8 tracking-tight">Beschikbare prijzen</h2>
    
    <div class="space-y-4">
      {sortedOffers.map((offer) => (
        <div class="bg-white border border-gray-100 p-6 rounded-2xl flex flex-col md:flex-row items-center gap-6 hover:border-blue-500 transition-all shadow-sm">
          <div class="flex-grow">
            <div class="font-black text-xl text-gray-900 mb-1">{offer.merchant}</div>
            <div class="flex gap-2 text-xs">
              <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded font-bold uppercase">{offer.condition}</span>
              <span class="bg-blue-50 text-blue-600 px-2 py-1 rounded font-bold uppercase">{offer.color}</span>
            </div>
          </div>

          <div class="text-center md:text-right min-w-[150px]">
             <div class="text-3xl font-black text-gray-900 mb-2">€{Number(offer.price).toFixed(2)}</div>
             <a 
               href={offer.link} 
               target="_blank" 
               rel="nofollow" 
               class="inline-block w-full bg-gray-900 text-white px-6 py-3 rounded-xl font-bold hover:bg-blue-600 transition-colors text-sm"
             >
               Bekijk bij shop
             </a>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>
