---
import Layout from '../../layouts/Layout.astro';

const { slug } = Astro.params;

// Gebruik PUBLIC_ variabelen voor SSR in Astro
const host = import.meta.env.PUBLIC_MEILI_HOST;
const key = import.meta.env.PUBLIC_MEILI_SEARCH_KEY;

let product = null;

try {
  // We bouwen de URL nu super veilig op
  const apiUrl = `${host}/indexes/products/search`;

  const response = await fetch(apiUrl, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'Authorization': `Bearer ${key}`
    },
    body: JSON.stringify({
      filter: `variant_slug = "${slug}"`,
      limit: 1
    })
  });

  if (response.ok) {
    const data = await response.json();
    if (data.hits && data.hits.length > 0) {
      product = data.hits[0];
    }
  }
} catch (e) {
  console.error("Fetch error:", e);
}

// Als we geen product hebben, stuur naar de 404 pagina
if (!product) {
  return Astro.redirect('/404');
}

const sortedOffers = product.offers?.sort((a, b) => Number(a.price) - Number(b.price)) || [];
---

<Layout title={`${product.title_h1} Vergelijken - Vind Refurbished`}>
  <main class="max-w-5xl mx-auto px-4 py-12 text-gray-900">
    <div class="grid md:grid-cols-2 gap-12 mb-16 items-center">
      <div class="bg-white p-8 rounded-3xl border border-gray-100 shadow-sm flex justify-center">
        <img 
          src={`https://img.findrefurbished.com/${product.master_id}.png`} 
          alt={product.title_h1}
          class="max-h-[400px] object-contain"
          onerror="this.src='https://placehold.co/200x200?text=Geen+Foto''"
        />
      </div>
      <div>
        <h1 class="text-4xl font-black mb-4 leading-tight">{product.title_h1}</h1>
        <div class="inline-block bg-blue-600 text-white px-8 py-4 rounded-2xl font-black text-3xl shadow-xl shadow-blue-100">
          €{Number(product.min_price).toFixed(2)}
        </div>
      </div>
    </div>

    <h2 class="text-2xl font-black mb-8 tracking-tight">Beschikbare prijzen bij winkels</h2>
    <div class="space-y-4">
      {sortedOffers.map((offer) => (
        <div class="bg-white border border-gray-100 p-6 rounded-2xl flex flex-col md:flex-row items-center justify-between gap-6 hover:shadow-md transition-shadow">
          <div class="font-black text-xl text-gray-800">{offer.merchant}</div>
          <div class="flex items-center gap-8">
            <div class="text-2xl font-black text-gray-900">€{Number(offer.price).toFixed(2)}</div>
            <a href={offer.link} target="_blank" rel="nofollow" class="bg-gray-900 text-white px-8 py-3 rounded-xl font-bold text-sm hover:bg-blue-600 transition-colors shadow-lg">
              Bekijk deal
            </a>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>
