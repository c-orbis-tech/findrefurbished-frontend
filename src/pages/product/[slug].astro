---
import Layout from '../../layouts/Layout.astro';

const { slug } = Astro.params;

// Forceer de juiste waarden
const host = "https://api.findrefurbished.com";
const key = "Test543"; 

let product = null;

try {
  // We plakken de sleutel DIRECT in de URL (noodgreep die altijd werkt)
  const apiUrl = `${host}/indexes/products/search?apiKey=${key}`;
  
  const response = await fetch(apiUrl, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({
      filter: `variant_slug = '${slug}'`,
      limit: 1
    })
  });

  const data = await response.json();
  
  if (data.hits && data.hits.length > 0) {
    product = data.hits[0];
  }
} catch (e) {
  console.error("Fetch error:", e.message);
}

// Als het echt niet lukt, laten we een simpele tekst zien ipv een redirect
// Zo zien we of de pagina zelf wel laadt
---

<Layout title={product ? product.title_h1 : "Laden..."}>
  <main class="max-w-5xl mx-auto px-4 py-12">
    {!product ? (
      <div class="text-center p-20 bg-gray-50 rounded-3xl border-2 border-dashed">
        <h1 class="text-2xl font-bold text-gray-400">Product niet gevonden in de database</h1>
        <p class="text-gray-400 mt-2 italic">Slug: {slug}</p>
        <a href="/" class="mt-6 inline-block bg-blue-600 text-white px-6 py-2 rounded-xl font-bold">Terug naar zoeken</a>
      </div>
    ) : (
      <!-- Hier komt je volledige mooie product styling die we eerder hebben gemaakt -->
      <div class="grid md:grid-cols-2 gap-12 mb-16 items-center">
         <div class="bg-white p-8 rounded-[2.5rem] border border-gray-100 shadow-sm flex justify-center">
            <img 
              src={`https://img.findrefurbished.com{product.master_id}.png`} 
              alt={product.title_h1}
              class="max-h-[400px] object-contain"
              onerror="this.src='https://placehold.co/200x200?text=Geen+Foto'"
            />
         </div>
         <div>
            <nav class="text-[10px] font-bold text-gray-400 uppercase tracking-widest mb-4">Home / {product.brand}</nav>
            <h1 class="text-4xl md:text-5xl font-black text-gray-900 mb-6 leading-tight">{product.title_h1}</h1>
            <div class="inline-block bg-blue-600 text-white px-8 py-4 rounded-2xl font-black text-3xl">
              €{Number(product.min_price).toFixed(2)}
            </div>
         </div>
      </div>
      
      <!-- Deals sectie... -->
      <div class="space-y-4">
        {product.offers?.sort((a, b) => a.price - b.price).map((offer) => (
          <div class="bg-white border border-gray-100 p-6 rounded-2xl flex justify-between items-center shadow-sm">
            <div class="font-black text-xl text-gray-800">{offer.merchant}</div>
            <div class="flex items-center gap-6">
              <div class="text-2xl font-black">€{Number(offer.price).toFixed(2)}</div>
              <a href={offer.link} target="_blank" rel="nofollow" class="bg-gray-900 text-white px-6 py-2 rounded-xl font-bold text-sm">Bekijk deal</a>
            </div>
          </div>
        ))}
      </div>
    )}
  </main>
</Layout>
